{
	"compilerOptions": {
		"paths": {
			"~/*": ["./src/*"]
		},
		"allowJs": true,
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"skipLibCheck": true,
		"strict": false
	},
	"include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
